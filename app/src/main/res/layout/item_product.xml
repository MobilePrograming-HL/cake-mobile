<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@drawable/background_product"
    android:layout_marginEnd="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:background="@color/bg"
            android:layout_marginBottom="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/img_default"/>

                <TextView
                    android:id="@+id/percent_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:text="-20%"
                    android:textColor="@color/white"
                    android:background="@drawable/background_ic_sale"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_500"/>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/l_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"

            android:layout_marginEnd="@dimen/_6sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_second"
                android:text="@string/sold"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/roboto_500"/>

            <TextView
                android:id="@+id/sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/text_second"
                android:textSize="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_4sdp"
                android:gravity="center"
                android:fontFamily="@font/roboto_500"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/text_second"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/roboto_500"
            android:layout_marginStart="@dimen/_6sdp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/text"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/roboto_500"
            android:layout_marginStart="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_6sdp">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ 199.000"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/text_second"/>

            <TextView
                android:id="@+id/price_after_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ 159.000"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/text"
                android:layout_marginStart="@dimen/_6ssp"
                android:fontFamily="@font/roboto_500"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>