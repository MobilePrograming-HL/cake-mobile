<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="a"
            type="nix.cake.android.ui.main.login.VerifyOtpActivity" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.login.VerifyOtpViewModel" />
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:onClick="@{(v)->a.finish()}"
                android:src="@drawable/back"
                android:padding="@dimen/_10sdp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_otp"
                android:textSize="@dimen/_30sdp"
                android:fontFamily="@font/roboto_600"
                android:textStyle="bold"
                android:textColor="@color/text"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_50sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mgs_otp"
                android:textSize="@dimen/_13ssp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_500"
                android:textColor="@color/text"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abcd@gmail.com"
                android:textSize="@dimen/_13ssp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_500"
                android:textColor="@color/warningColor"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginVertical="@dimen/_12sdp"
                >
                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:inputType="number"
                    android:background="@drawable/background_text_box_otp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:maxLength="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/errorMgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_27sdp"
                android:fontFamily="@font/roboto_500"
                android:text="@string/empty"
                android:textColor="@color/textWarning"
                android:textSize="@dimen/_13ssp" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:background="@drawable/background_button_login_radius_25"
                android:fontFamily="@font/roboto_500"
                android:onClick="@{() -> a.onVerifyClick()}"
                android:text="@string/verify_otp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

        </LinearLayout>
    </RelativeLayout>
</layout>