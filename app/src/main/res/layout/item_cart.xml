<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        app:dragEdge="right"
        app:mode="normal"
        >

        <LinearLayout
            android:id="@+id/swipe_action_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:background="@color/delete_item"
            >

            <TextView
                android:id="@+id/action_delete"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/warningColor"
                android:text="@string/delete"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_500"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <ImageView
                android:id="@+id/checked"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/unchecked"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/imgItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@+id/checked"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@color/img_default"/>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_12sdp"
                android:layout_toEndOf="@+id/imgItem">
                <LinearLayout
                    android:id="@+id/l_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_600"
                        android:layout_marginBottom="@dimen/_6sdp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/price_after_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:text="Ä‘ 555.555.000"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/roboto_600"
                            android:textColor="@color/text"/>


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 $"
                            android:textSize="@dimen/_8ssp"
                            android:fontFamily="@font/roboto_500"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flavor"
                        android:textColor="@color/text_second"
                        android:fontFamily="@font/roboto_500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center_vertical"
                    android:layout_gravity="end|bottom"
                    >

                    <FrameLayout
                        android:id="@+id/removeItem"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/minus"
                            android:background="@drawable/bg_ic"
                            android:layout_gravity="center"/>

                    </FrameLayout>


                    <EditText
                        android:id="@+id/countItemCart"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:text="1"
                        android:textSize="@dimen/_10ssp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:textColor="@color/text"
                        android:fontFamily="@font/roboto_500"
                        android:background="@drawable/background_text_box_cart"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <FrameLayout
                        android:id="@+id/add_item"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/plus"
                            android:background="@drawable/bg_ic"
                            android:layout_gravity="center"
                            />

                    </FrameLayout>


                </LinearLayout>

            </FrameLayout>





        </RelativeLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</layout>