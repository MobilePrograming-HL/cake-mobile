<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="a"
            type="nix.cake.android.ui.main.product.detail.ProductDetailActivity" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.product.detail.ProductDetailViewModel" />
        <variable
            name="name"
            type="String" />
        <variable
            name="category"
            type="String" />
        <variable
            name="sold"
            type="String" />
        <variable
            name="reviews"
            type="String" />
        <variable
            name="rating"
            type="String" />
        <import type="android.view.View"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">

            <RelativeLayout
                android:id="@+id/l_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/back"
                    android:padding="@dimen/_10sdp"
                    android:onClick="@{(v)->a.finish()}"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="@dimen/_10ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@{name}"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"/>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l_header"
                android:background="@color/bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/img_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300sdp" />
                        <TextView
                            android:id="@+id/tvImageCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:textColor="@color/text"
                            android:background="@drawable/background_slide_show_count"
                            android:textSize="@dimen/_10ssp"
                            android:text="3/3"
                            android:layout_margin="@dimen/_12sdp"/>

                    </FrameLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/img_container"
                        android:layout_marginTop="@dimen/_12sdp">

                        <LinearLayout
                            android:id="@+id/l_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_12sdp">

                            <ImageView
                                android:id="@+id/start_1"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/start_full"/>
                            <ImageView
                                android:id="@+id/start_2"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/start_full"/>
                            <ImageView
                                android:id="@+id/start_3"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/start_full"/>
                            <ImageView
                                android:id="@+id/start_4"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/start_full"/>
                            <ImageView
                                android:id="@+id/start_5"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/start_full"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{reviews}"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:gravity="center"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_12ssp"
                            android:orientation="horizontal"
                            android:layout_below="@+id/l_start">
                            <TextView
                                android:id="@+id/price_after_sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="đ 159.000"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"
                                android:layout_marginStart="@dimen/_12sdp"
                                />
                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="đ 199.000"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/text_second"
                                android:layout_marginStart="@dimen/_6ssp"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/sold + ` ` + sold}"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/roboto_500"
                            android:textColor="@color/text"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="@dimen/_12sdp"/>

                        <LinearLayout
                            android:id="@+id/l_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_12ssp"
                            android:orientation="vertical"
                            android:layout_below="@+id/l_price">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"
                                android:layout_marginStart="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/text_second"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_500"

                                />
                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:text="@string/description"
                                android:fontFamily="@font/roboto_500"
                                />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/text_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/l_name">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/line"
                                android:layout_alignParentTop="true"/>

                            <LinearLayout
                                android:id="@+id/l_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center_vertical|start"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginVertical="@dimen/_12sdp">
                                <TextView
                                    android:id="@+id/rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_24ssp"
                                    android:textColor="@color/text"
                                    android:textStyle="bold"
                                    android:text="@{rating}"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/reviews_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:text="@{reviews + ` ` + @string/ratings}"
                                    android:textColor="@color/text_second"
                                    android:fontFamily="@font/roboto_500"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/l_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/l_rating"
                                android:layout_marginVertical="@dimen/_12sdp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_marginBottom="@dimen/_4sdp">

                                    <LinearLayout
                                        android:id="@+id/l_rating_5"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginEnd="@dimen/_12sdp">
                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/rating_5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/_10ssp"
                                        android:fontFamily="@font/roboto_500"
                                        android:layout_toEndOf="@id/l_rating_5"
                                        android:layout_centerVertical="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_marginBottom="@dimen/_4sdp">

                                    <LinearLayout
                                        android:id="@+id/l_rating_4"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginEnd="@dimen/_12sdp">
                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/rating_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/_10ssp"
                                        android:fontFamily="@font/roboto_500"
                                        android:layout_toEndOf="@id/l_rating_4"
                                        android:layout_centerVertical="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_marginBottom="@dimen/_4sdp">

                                    <LinearLayout
                                        android:id="@+id/l_rating_3"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginEnd="@dimen/_12sdp">
                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/rating_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/_10ssp"
                                        android:fontFamily="@font/roboto_500"
                                        android:layout_toEndOf="@id/l_rating_3"
                                        android:layout_centerVertical="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_marginBottom="@dimen/_4sdp">

                                    <LinearLayout
                                        android:id="@+id/l_rating_2"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginEnd="@dimen/_12sdp">
                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/rating_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/_10ssp"
                                        android:fontFamily="@font/roboto_500"
                                        android:layout_toEndOf="@id/l_rating_2"
                                        android:layout_centerVertical="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_marginBottom="@dimen/_4sdp">

                                    <LinearLayout
                                        android:id="@+id/l_rating_1"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginEnd="@dimen/_12sdp">
                                        <ImageView
                                            android:layout_width="@dimen/_14sdp"
                                            android:layout_height="@dimen/_14sdp"
                                            android:src="@drawable/start_full" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/rating_1"
                                        android:layout_width="@dimen/_46sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="1dp"
                                        android:fontFamily="@font/roboto_500"
                                        android:text="999.543k"
                                        android:textColor="@color/text"
                                        android:layout_toEndOf="@id/l_rating_1"
                                        android:textSize="@dimen/_10ssp" />
                                </RelativeLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/chevron_right"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/line"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </FrameLayout>
</layout>