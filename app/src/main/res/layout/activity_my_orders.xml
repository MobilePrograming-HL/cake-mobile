<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="a"
            type="nix.cake.android.ui.main.profile.order.MyOrdersActivity" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.profile.order.MyOrdersViewModel" />
        <import type="android.view.View"/>
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/l_my_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.profile.order.MyOrdersActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">
            <RelativeLayout
                android:id="@+id/l_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/back"
                    android:padding="@dimen/_10sdp"
                    android:onClick="@{(v)->a.finish()}"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="@dimen/_10ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/my_orders"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg"
                android:id="@+id/line"
                android:layout_below="@id/l_header"/>
            <RelativeLayout
                android:id="@+id/l_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:background="@color/white">

                <TextView
                    android:id="@+id/status_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_all"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_12sdp"/>

                <RelativeLayout
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{()-> a.showRightMenu()}">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_icon_filter" />
                </RelativeLayout>


            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/l_status"
                android:layout_marginTop="@dimen/_6sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/l_rv_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@color/white"
                            android:visibility="@{vm.isEmpty ? View.VISIBLE : View.INVISIBLE}"
                            android:layout_marginBottom="@dimen/_6sdp">
                            <include
                                android:id="@+id/progress_order"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                layout="@layout/layout_progress_bar_load_more"/>
                            <LinearLayout
                                android:id="@+id/l_is_empty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="@dimen/_12ssp">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/ic_icon_empty_list"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/your_order_is_empty"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_500"/>
                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l_rv_order"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/you_might_like_to_fill_it_with"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_500"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_product"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_12sdp"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <include
                android:id="@+id/progress_loading_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_loading_progressbar_top"
                android:visibility="visible"
                android:layout_below="@id/line"/>
        </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/menu_filter"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fitsSystemWindows="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:onClick="@{v -> a.closeRightMenu()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_left_menu"
                        android:rotation="180"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:text="@string/filter"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text"/>
                <RelativeLayout
                    android:id="@+id/filter_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_all)}"
                    >
                    <ImageView
                        android:id="@+id/tick_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_all"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/filter_waiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_wait_for_confirmation)}"
                    >
                    <ImageView
                        android:id="@+id/tick_wait_for_confirmation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_wait_for_confirmation"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/filter_processing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_processing)}"
                    >
                    <ImageView
                        android:id="@+id/tick_processing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_processing"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/filter_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_shipping)}"
                    >
                    <ImageView
                        android:id="@+id/tick_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_shipping"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/filter_delivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_delivered)}"
                    >
                    <ImageView
                        android:id="@+id/tick_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_delivered"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/filter_cancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> a.onFilterClicked(@string/status_cancelled)}"
                    >
                    <ImageView
                        android:id="@+id/tick_cancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_icon_tick"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"/>
                    <TextView
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_44sdp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/status_cancelled"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginStart="@dimen/_12sdp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>