<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:background="@drawable/background_order_item"
    android:layout_marginBottom="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/status_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_delivered"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/status_order"
            android:fontFamily="@font/roboto_500"
            android:layout_margin="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31-12-2024"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/text_second"
            android:fontFamily="@font/roboto_500"
            android:textStyle="normal"
            android:layout_margin="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_12sdp">

            <LinearLayout
                android:id="@+id/l_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12sdp">

                <TextView
                    android:id="@+id/title_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_no"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#12345678"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_quantity"
                android:layout_below="@+id/l_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12sdp">

                <TextView
                    android:id="@+id/title_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_500"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_12sdp">

            <TextView
                android:id="@+id/title_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_500"
                android:textColor="@color/text_second" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000 vnÄ‘"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_500"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"/>
        </LinearLayout>

        <Button
            android:id="@+id/cancel_order"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/Cancel"
            android:textColor="@color/textWarning"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/background_button_cancel_order"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_500"
            android:layout_margin="@dimen/_12sdp"/>
    </RelativeLayout>

</FrameLayout>