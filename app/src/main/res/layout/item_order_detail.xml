<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@drawable/background_order_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_12sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_card"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cake_default"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_card"
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_500"
                android:textColor="@color/text"
                android:layout_marginBottom="@dimen/_12sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flavor"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text_second"
                    android:fontFamily="@font/roboto_500"/>
                <TextView
                    android:id="@+id/flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mango"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"
                    android:layout_marginStart="@dimen/_12sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text_second"
                    android:fontFamily="@font/roboto_500"/>
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3, Medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"
                    android:layout_marginStart="@dimen/_12sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/_3sdp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ 100.000"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/text_second"
                    android:fontFamily="@font/roboto_500"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ 50.000"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"
                    android:layout_marginStart="@dimen/_3sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/text_second"
                    android:fontFamily="@font/roboto_500"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ 500.000"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"
                    android:layout_marginStart="@dimen/_12sdp"/>
            </LinearLayout>

            <Button
                android:id="@+id/cancel_order"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="@string/buy"
                android:textColor="@color/textWarning"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/background_button_cancel_order"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto_500"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>