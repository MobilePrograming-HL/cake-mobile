<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="a"
            type="nix.cake.android.ui.main.profile.order.detail.OrderDetailActivity" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.profile.order.detail.OrderDetailViewModel" />
        <import type="android.view.View"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/l_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/back"
                    android:padding="@dimen/_10sdp"
                    android:onClick="@{(v)->a.finish()}"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="@dimen/_10ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/order_details"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"/>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/l_header"
                android:layout_marginTop="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_delivered"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:layout_margin="@dimen/_6sdp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rv_product"
                                android:layout_marginBottom="@dimen/_6sdp"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_6sdp">
                            <ImageView
                                android:id="@+id/ic_location"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/location"
                                android:layout_margin="@dimen/_6sdp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/white"
                                android:layout_marginBottom="1dp"
                                android:layout_toEndOf="@id/ic_location">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/roboto_500"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_6sdp"/>

                                <TextView
                                    android:id="@+id/phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone"
                                    android:textSize="@dimen/_9ssp"
                                    android:textColor="@color/text_second"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/address_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address_detail"
                                    android:textSize="@dimen/_9ssp"
                                    android:textColor="@color/text_second"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_6sdp"
                                    android:fontFamily="@font/roboto_500"
                                    android:text="@string/address_detail"
                                    android:textColor="@color/text_second"
                                    android:textSize="@dimen/_9ssp" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/retail_price"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/retail_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ä‘ 144.000"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/roboto_500"
                                    android:layout_alignParentEnd="true"
                                    android:textStyle="bold"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/shipping_fee"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/shipping_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:layout_marginEnd="10dp"
                                    android:fontFamily="@font/roboto_500"
                                    android:text="Ä‘ 30.000"
                                    android:textColor="@color/text"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/coupon_s"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/roboto_500"/>

                                <TextView
                                    android:id="@+id/coupon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="- Ä‘ 0"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text_money"
                                    android:fontFamily="@font/roboto_500"
                                    android:layout_alignParentEnd="true"
                                    android:textStyle="bold"/>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/line"
                                android:layout_margin="@dimen/_6sdp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/_12sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/grand_total"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/text"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_500"
                                    android:layout_centerVertical="true"/>

                                <TextView
                                    android:id="@+id/total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ä‘ 174.000"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/text_money"
                                    android:fontFamily="@font/roboto_500"
                                    android:layout_alignParentEnd="true"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:paddingHorizontal="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_information"
                                android:layout_marginVertical="@dimen/_6sdp"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_time"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/order_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_time"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_method"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_method"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping_method"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/shipping_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_method"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </FrameLayout>
</layout>
