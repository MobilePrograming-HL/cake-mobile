<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="a"
            type="nix.cake.android.ui.main.profile.order.detail.OrderDetailActivity" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.profile.order.detail.OrderDetailViewModel" />
        <import type="android.view.View"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/l_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/back"
                    android:padding="@dimen/_10sdp"
                    android:onClick="@{(v)->a.finish()}"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="@dimen/_10ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/order_details"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_500"/>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/l_header">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_12sdp">

                    <RelativeLayout
                        android:id="@+id/l_header_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentTop="true">

                        <LinearLayout
                            android:id="@+id/l_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="@dimen/_12sdp">

                            <TextView
                                android:id="@+id/title_order_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_no"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:textColor="@color/text_second"/>

                            <TextView
                                android:id="@+id/order_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#12345678"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_10sdp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l_quantity"
                            android:layout_below="@+id/l_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <TextView
                                android:id="@+id/title_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quantity"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:textColor="@color/text_second"/>

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_10sdp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/status_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_delivered"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/status_order"
                            android:fontFamily="@font/roboto_500"
                            android:layout_alignParentEnd="true"
                            android:layout_marginVertical="@dimen/_11sdp"/>

                        <TextView
                            android:id="@+id/date_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31-12-2024"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text_second"
                            android:fontFamily="@font/roboto_500"
                            android:textStyle="normal"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/status_order"/>
                    </RelativeLayout>
                    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l_header_2">


                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rv_order_detail"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_information"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_14sdp"
                            android:fontFamily="@font/roboto_500"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/address"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/roboto_500"
                                android:text="@string/address"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/payment"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/address"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/delivery"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/address"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginBottom="@dimen/_12sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/discount"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/address"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_amount"
                                android:textColor="@color/text_second"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/address"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginVertical="@dimen/_30sdp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/reorder"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:background="@drawable/background_button_detail_order"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/feedback"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_500"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:background="@drawable/background_button_login_radius_25"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </FrameLayout>
</layout>
