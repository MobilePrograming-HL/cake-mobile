<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="f"
            type="nix.cake.android.ui.main.profile.ProfileFragment" />
        <variable
            name="vm"
            type="nix.cake.android.ui.main.profile.ProfileViewModel" />
        <import type="android.view.View"/>
    </data>

    <FrameLayout
        android:animateLayoutChanges="true"
        android:background="@color/bg_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile"
                android:textSize="@dimen/_30ssp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/roboto_600"
                android:textColor="@color/text"/>
            
            <RelativeLayout
                android:id="@+id/l_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/_22sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_45ssp"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_500"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/text_second"
                        android:fontFamily="@font/roboto_500"/>
                </LinearLayout>
                
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l_avatar"
                android:layout_marginTop="@dimen/_30sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp"
                        android:onClick="@{v -> f.onMyOrdersClick()}">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_orders"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/order_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp"
                        android:onClick="@{v -> f.onShippingAddressClick()}">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/ship_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping_addresses"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/ship_address_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_method"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/payment_method_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coupon_code"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:id="@+id/coupon_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/text"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_500"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name_password"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/text_second"
                                android:fontFamily="@font/roboto_500"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/background_button_cancel_order"
                        android:text="@string/sign_out"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/textWarning"
                        android:fontFamily="@font/roboto_500"
                        android:layout_marginVertical="@dimen/_45sdp"
                        android:layout_marginHorizontal="@dimen/_45sdp"
                        android:onClick="@{v -> f.onSignOutClick()}"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </FrameLayout>
</layout>